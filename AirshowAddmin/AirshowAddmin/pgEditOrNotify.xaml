<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AirshowAddmin.pgEditOrNotify">
    <ContentPage.Content>
        <StackLayout
            Margin="0,30,0,0"
            LayoutChanged="StackLayout_LayoutChanged">
            <Button
                x:Name="btnEdit"
                Text="Edit Database"
                Clicked="btnEdit_Clicked"
                />
            <Button
                x:Name="btnNotify"
                Text="Draft Notification"
                Clicked="btnNotify_Clicked"
                />
            <Button 
                    x:Name="backButton"
                    Text="Back"
                    Pressed="backButton_Pressed"
                    HorizontalOptions="Start"
                    VerticalOptions="End">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>