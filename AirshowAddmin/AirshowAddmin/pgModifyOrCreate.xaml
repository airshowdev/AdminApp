<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AirshowAddmin.pgModifyOrCreate">
    <ContentPage.Content>
        <StackLayout
            Margin="0,30,0,0"
            LayoutChanged="StackLayout_LayoutChanged">
            <Button
                x:Name="btnModify"
                Text="Modfiy Airshow"
                Clicked="btnModify_Clicked"
                />
            <Button
                x:Name="btnCreate"
                Text="Create Airshow"
                Clicked="btnCreate_Clicked"/>

            <Button 
                    x:Name="backButton"
                    Text="Back"
                    Pressed="backButton_Pressed"
                    HorizontalOptions="Start"
                    VerticalOptions="End">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>